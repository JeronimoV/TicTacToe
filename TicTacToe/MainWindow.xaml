<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid x:Name="contenedor" Margin="175,28,175,28">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Canvas Margin="24,20,24,20" Background="#FFC8C8C8" MouseLeftButtonDown="MarcarCasilla">
                <Label x:Name="c_0" Content="" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="38" Canvas.Top="30" Width="26"/>
            </Canvas>
            <Canvas Margin="24,15,24,25" Background="#FFC8C8C8" Grid.Row="1" MouseLeftButtonDown="MarcarCasilla">
                <Label x:Name="c_3" Content="" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="38" Canvas.Top="30" Width="26"/>
            </Canvas>
            <Canvas Margin="24,20,24,20" Background="#FFC8C8C8" Grid.Row="2" MouseLeftButtonDown="MarcarCasilla">
                <Label x:Name="c_6" Content="" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="38" Canvas.Top="30" Width="26"/>
            </Canvas>
            <Canvas Margin="24,20,24,20" Background="#FFC8C8C8" Grid.Column="1" MouseLeftButtonDown="MarcarCasilla">
                <Label x:Name="c_1" Content="" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="38" Canvas.Top="30" Width="26"/>
            </Canvas>
            <Canvas Margin="24,15,24,25" Background="#FFC8C8C8" Grid.Row="1" Grid.Column="1" MouseLeftButtonDown="MarcarCasilla">
                <Label x:Name="c_4" Content="" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="38" Canvas.Top="30" Width="26"/>
            </Canvas>
            <Canvas Margin="24,20,24,20" Background="#FFC8C8C8" Grid.Row="2" Grid.Column="1" MouseLeftButtonDown="MarcarCasilla">
                <Label x:Name="c_7" Content="" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="38" Canvas.Top="30" Width="26"/>
            </Canvas>
            <Canvas Margin="24,20,24,20" Background="#FFC8C8C8" Grid.Column="2" MouseLeftButtonDown="MarcarCasilla">
                <Label x:Name="c_2" Content="" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="38" Canvas.Top="30" Width="26"/>
            </Canvas>
            <Canvas Margin="24,15,24,25" Background="#FFC8C8C8" Grid.Row="1" Grid.Column="2" MouseLeftButtonDown="MarcarCasilla">
                <Label x:Name="c_5" Content="" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="38" Canvas.Top="30" Width="26"/>
            </Canvas>
            <Canvas Margin="24,20,24,20" Background="#FFC8C8C8" Grid.Row="2" Grid.Column="2" MouseLeftButtonDown="MarcarCasilla">
                <Label x:Name="c_8" Content="" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="38" Canvas.Top="30" Width="26"/>
            </Canvas>
        </Grid>
        <Button Content="Reset" HorizontalAlignment="Left" Margin="75,202,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
